{
  "compilerOptions": {
    "isolatedModules": false,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "module": "esnext",
    "rootDir": "./",
    "baseUrl": "./",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "scripts/**/*.js",
    "babel.config.js",
    "**/rollup.config.js",
    "**/dist",
    "**/www",
    "**/build",
    "**/loader",
    "**/index.esm.js",
    "**/public/**/*.js",
    "**/__tests__/**.*.js",
    "**/lib",
    "changelog.config.js",
    "commitlint.config.js"
  ]
}
