{
  "name": "imunify",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev:ac": "concurrently \"lerna run --stream --scope antivirus-card start\" \"npm:proxy\"",
    "build:ac": "lerna run --stream --scope antivirus-card build && npm run lang",
    "dev:am": "concurrently \"lerna run --stream --scope antivirus-menu start\" \"npm:proxy\"",
    "build:am": "lerna run --stream --scope antivirus-menu build && npm run lang",
    "dev:aw": "concurrently \"lerna run --stream --scope antivirus-widget start\" \"npm:proxy\"",
    "build:aw": "lerna run --stream --scope antivirus-widget build && npm run lang",
    "proxy": "node scripts/dev-proxy-server",
    "lang": "node --experimental-modules scripts/prepare-lang.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "commitizen": "^3.1.1",
    "concurrently": "^4.1.0",
    "fs-extra": "^8.1.0",
    "git-cz": "^3.2.1",
    "glob": "^7.1.4",
    "http-proxy": "^1.17.0",
    "husky": "^3.0.0",
    "lerna": "^3.15.0",
    "lodash": "^4.17.14"
  },
  "dependencies": {
    "antivirus-card": "file:packages/antivirus-card",
    "antivirus-widget": "file:packages/antivirus-widget"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/git-cz"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS -g './commitlint.config.js'"
    }
  }
}
